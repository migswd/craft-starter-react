{
    "buttons": [
        "html",
        "formatting",
        "bold",
        "italic",
        "unorderedlist",
        "orderedlist",
        "indent",
        "outdent",
        "link",
        "file",
        "image"
    ],
    "plugins": [
        "alignment",
        "linkattr",
        "counter"
    ],
    "linkAttrs" : [
      { "label": "Tracking ID", "attr": "data-track", "type": "text" }
    ],
    "formatting": [
        "p",
        "h2",
        "h3"
    ],
    "formattingAdd": {
        "extra-bottom-margin": {
            "title": "Extra Bottom Margin",
            "api": "module.inline.format",
            "args": {
                "tag": "span",
                "class": "mb-20",
                "type": "toggle"
            }
        },
        "Tight Paragraphs": {
            "title": "Tight Paragraphs",
            "api":"module.block.format",
            "args": {
                "tag": "p",
                "class": "mt-1 mb-0 leading-tight",
                "type": "toggle"
            }
        }
    },
    "toolbarFixed": true,
    "linkNewTab": true,
    "linkTitle": true
}